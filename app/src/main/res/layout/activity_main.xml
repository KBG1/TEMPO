<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="2dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/ns_eb"
                android:text="TEMPO"
                android:textAlignment="center"
                android:textColor="#BEF2E4"
                android:textSize="50dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                app:layout_constraintLeft_toLeftOf="@+id/mainFrame"
                app:layout_constraintRight_toRightOf="@+id/mainFrame"
                app:layout_constraintTop_toTopOf="@+id/mainFrame"
                tools:layout_conversion_absoluteHeight="50dp"
                tools:layout_conversion_absoluteWidth="350dp" />


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/radius"
                android:fontFamily="@font/ns_r"
                android:orientation="vertical"
                android:padding="10dp"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/mainFrame"
                app:layout_constraintTop_toBottomOf="@+id/title"
                tools:ignore="MissingConstraints"
                tools:layout_conversion_absoluteHeight="200dp"
                tools:layout_conversion_absoluteWidth="380dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/stepTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ns_r"
                        android:text="운동"
                        android:textColor="#BEF2E4"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/run"
                        tools:layout_editor_absoluteX="88dp"
                        tools:layout_editor_absoluteY="358dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/ns_r"
                            android:paddingTop="20dp"
                            android:text="현재 걸음 수"
                            android:textColor="#FFFFFF"
                            android:textSize="30dp" />

                        <TextView
                            android:id="@+id/stepCountView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/ns_eb"
                            android:paddingRight="10dp"
                            android:text="0"
                            android:textAlignment="textEnd"
                            android:textColor="#BEF2E4"
                            android:textSize="60dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/ns_r"
                            android:paddingTop="20dp"
                            android:text="분당 걸음 수"
                            android:textColor="#FFFFFF"
                            android:textSize="30dp" />

                        <TextView
                            android:id="@+id/stepsPerMinuteView"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/ns_eb"
                            android:paddingRight="10dp"
                            android:text="0"
                            android:textAlignment="textEnd"
                            android:textColor="#BEF2E4"
                            android:textSize="60dp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/radius"
                android:orientation="vertical"
                android:padding="10dp"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
                app:layout_constraintEnd_toEndOf="@+id/mainFrame"
                app:layout_constraintStart_toStartOf="@+id/mainFrame"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                tools:layout_conversion_absoluteHeight="180dp"
                tools:layout_conversion_absoluteWidth="380dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/musicTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ns_r"
                        android:text="음악"
                        android:textColor="#BEF2E4"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/music"
                        tools:layout_editor_absoluteX="88dp"
                        tools:layout_editor_absoluteY="358dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/albumArt"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/oursparklingbeginning"
                        tools:layout_editor_absoluteX="88dp"
                        tools:layout_editor_absoluteY="358dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/songTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/ns_r"
                            android:text="반짝이던 안녕"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/singerName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/ns_r"
                            android:text="Fromm"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="39dp"
                            android:orientation="horizontal"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp">

                            <ImageButton
                                android:id="@+id/btnPrev"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:backgroundTint="#404040"
                                app:srcCompat="@android:drawable/ic_media_previous" />

                            <ImageButton
                                android:id="@+id/btnPlay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:backgroundTint="#404040"
                                app:srcCompat="@android:drawable/ic_media_pause" />

                            <ImageButton
                                android:id="@+id/btnNext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:backgroundTint="#404040"
                                app:srcCompat="@android:drawable/ic_media_next"
                                tools:ignore="TouchTargetSizeCheck" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/autoPauseView"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:text="자동 일시정지됨"
                            android:textAlignment="center"
                            android:textColor="#BEF2E4"
                            android:textSize="15dp" />


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="100dp"
                android:background="@drawable/radius"
                android:orientation="vertical"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/mainFrame"
                app:layout_constraintEnd_toEndOf="@+id/mainFrame"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/mainFrame"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                tools:ignore="MissingConstraints"
                tools:layout_conversion_absoluteHeight="47dp"
                tools:layout_conversion_absoluteWidth="380dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/challengeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ns_r"
                        android:text="챌린지"
                        android:textColor="#BEF2E4"
                        android:textSize="20dp" />

                    <Switch
                        android:id="@+id/challengeSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:thumbTint="#FFFFFF"
                        android:trackTint="#FFFFFF" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/challengeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/todayMission"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/ns_b"
                        android:text="LEVEL2-2"
                        android:textColor="#F37E63"
                        android:textSize="40dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/ns_r"
                            android:paddingTop="20dp"
                            android:text="오늘의 목표"
                            android:textColor="#FFFFFF"
                            android:textSize="35dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/todayLevel"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/ns_eb"
                                android:paddingTop="20dp"
                                android:text="BPM\n100-100"
                                android:textAlignment="textEnd"
                                android:textColor="#F37E63"
                                android:textSize="40dp" />

                            <TextView
                                android:id="@+id/todayStage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/ns_eb"
                                android:paddingTop="20dp"
                                android:text="2곡 뛰고\n1곡 쉬고"
                                android:textAlignment="textEnd"
                                android:textColor="#F37E63"
                                android:textSize="40dp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/remainingGoalLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/ns_r"
                            android:paddingTop="20dp"
                            android:text="다음 휴식까지"
                            android:textColor="#FFFFFF"
                            android:textSize="30dp" />

                        <TextView
                            android:id="@+id/remainingGoal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/ns_eb"
                            android:paddingTop="15dp"
                            android:text="1곡"
                            android:textAlignment="textEnd"
                            android:textColor="#F37E63"
                            android:textSize="40dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/challengeStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/ns_b"
                        android:text="챌린지 현황"
                        android:textColor="#F37E63"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/level1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/ns_eb"
                        android:text="LEVEL 1"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/level1_1"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/successicon" />

                        <ImageView
                            android:id="@+id/level1_2"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/successicon" />

                        <ImageView
                            android:id="@+id/level1_3"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/successicon" />

                        <ImageView
                            android:id="@+id/level1_4"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/successicon" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/level2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/ns_eb"
                        android:text="LEVEL 2"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/level2_1"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/successicon" />

                        <ImageView
                            android:id="@+id/level2_2"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/failedicon" />

                        <ImageView
                            android:id="@+id/level2_3"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/failedicon" />

                        <ImageView
                            android:id="@+id/level2_4"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/failedicon" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/level3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/ns_eb"
                        android:text="LEVEL 3"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/level3_1"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/failedicon" />

                        <ImageView
                            android:id="@+id/level3_2"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/failedicon" />

                        <ImageView
                            android:id="@+id/level3_3"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/failedicon" />

                        <ImageView
                            android:id="@+id/level3_4"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/failedicon" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/level4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/ns_eb"
                        android:text="LEVEL 4"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/level4_1"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/failedicon" />

                        <ImageView
                            android:id="@+id/level4_2"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/failedicon" />

                        <ImageView
                            android:id="@+id/level4_3"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/failedicon" />

                        <ImageView
                            android:id="@+id/level4_4"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/failedicon" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/level5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/ns_eb"
                        android:text="LEVEL 5"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/level5_1"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/failedicon" />

                        <ImageView
                            android:id="@+id/level5_2"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/failedicon" />

                        <ImageView
                            android:id="@+id/level5_3"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/failedicon" />

                        <ImageView
                            android:id="@+id/level5_4"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/failedicon" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
